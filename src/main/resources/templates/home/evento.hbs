      <div class="row">
        <div class="col-md-5 p-4" style="	box-shadow: 0px 0px 4px  black;	background-image: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.8)), url(https://pingendo.com/site-assets/cover.jpg);	background-position: top left, top left;	background-size: 100%, 100%;	background-repeat: repeat, repeat;"></div>
        <div class="col-md-7 p-4">
          <h3 class="mb-3">Editar evento</h3>
         
         
         
          <form      action="/admin/clientes/{{id}}/dispositivos" method="post"     >
            <div class="form-row">
              <div class="form-group col-md-12">
              <input type="hidden" name="nombre" >
              
              <input type="text" name="nombreEvento" class="form-control" placeholder="Nombre">
              
              
              </div>
              
            </div>
            
            <div class="form-group col-md-12">
              <input type="hidden" name="estilo">
              
              <input type="text" name="estiloEvento" class="form-control" placeholder="Estilo">
              
              
              </div>
              
             <div class="form-group col-md-12">
              <input type="hidden" name="fecha">
              
              <input type="text" name="estiloEvento" class="form-control" placeholder="Fecha">
              
              
              </div>
              
              <div class="form-group col-md-12">
              <input type="hidden" name="hora" >
              
              <input type="text" name="horaEvento" class="form-control" placeholder="Hora">
              
              
              </div>
              
              <div class="form-group col-md-12">
              <input type="hidden" name="direccion">
              
              <input type="text" name="direccionEvento" class="form-control" placeholder="Estilo">
              
              
              </div>
              
             
              
              
              </div>
            
          	
          	<button type="submit" class="btn btn-primary">Aceptar
          		</button>
          
          </form> 
          		<button type="submit" class="btn btn-primary" onclick="location.href='/admin/Clientes/{{id}}'" >Cancelar</button>
          	
        </div>
      </div>
    </div>
  </div>
  
