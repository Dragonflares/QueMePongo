<div class="image-container set-full-height">

    <!--   Big container   -->
    <div class="container">
        <div class="row">
        <div class="col-sm-8 col-sm-offset-2">

            <!--      Wizard container        -->
            <div class="wizard-container">

                <div class="card wizard-card" data-color="blue" id="wizardProfile">
                    <form action="/altaPrenda" method="post">
                <!--        You can switch ' data-color="orange" '  with one of the next bright colors: "blue", "green", "orange", "red"          -->

                    	<div class="wizard-header">
                        	<h3>
                        	   <b>CREA</b> TU PRENDA <br>
                        	   <small>Su prenda sera guardada en el guardarropa</small>
                        	</h3>
                    	</div>

						<div class="wizard-navigation">
							<ul>
	                            <li><a href="#atributos" data-toggle="tab">Atributos</a></li>
	                            <li><a href="#nombre" data-toggle="tab">Nombre</a></li>
	                            
	                        </ul>

						</div>

                        <div class="tab-content">
                            
							<div class="tab-pane" id="atributos">
                              <div class="row">
                                  <h4 class="info-text">&nbsp;&nbsp;Elija el tipo de Ropa </h4>
                                  <div class="col-sm-6 col-sm-offset-3">
                                      <div class="form-group">											
                                      		<select name="tipo" class="form-control" style="height: 35px;">
											{{#each tipos}}                                            
											<option value="{{ nombre }}"> {{ nombre }} </option>
                                      	  	{{/each}}
											</select>
                                      </div>
                                  </div>
								  <h4 class="info-text">&nbsp;&nbsp;Elija el material &nbsp; &nbsp;&nbsp;</h4>
                                  <div class="col-sm-6 col-sm-offset-3">
                                      <div class="form-group">
                                      		
											<select name="material" class="form-control" style="height: 35px;">
											{{#each materiales}}
											<option value={{ nombre }}> {{ nombre }} </option>
                                      	  	{{/each}}
											</select>
											
                                      </div>
                                  </div>
								  							  
                              </div>
                            </div>					
						                           
							<div class="tab-pane" id="nombre">
                              <div class="row">             
                                  <h4 class="info-text">&nbsp;&nbsp;Elija el color principal &nbsp; &nbsp;&nbsp;</h4>
                                  <div class="col-sm-6 col-sm-offset-3">
                                      <div class="form-group">
                                      		
											<select name="colorPrincipal" class="form-control" style="height: 35px;">
											{{#each colores}}
											<option value={{ nombre }}> {{ nombre }} </option>
                                      	  	{{/each}}
											</select>
											
                                      </div>
                                  </div>
								  <h4 class="info-text">&nbsp;&nbsp;Elija el color secundario &nbsp; &nbsp;&nbsp;</h4>
                                  <div class="col-sm-6 col-sm-offset-3">
                                      <div class="form-group">
                                      		
											<select name="colorSecundario" class="form-control" style="height: 35px;">
											{{#each colores}}
											<option value={{ nombre }}> {{ nombre }} </option>
                                      	  	{{/each}}
											</select>
											
                                      </div>
                                  </div>	                    
								<h4 class="info-text">&nbsp;&nbsp; Elija un nombre para su prenda </h4>
                                  
								  <div class="col-sm-6 col-sm-offset-3">
									  <div class="form-group">
										<input type="text" name="nombrePrenda" class="form-control" placeholder="Nombre" style="width:90%" required>
									  </div>
                                  </div>
							  
                              </div>
                            </div>						
						
						</div>					
						
						
   						
						
                        <div class="wizard-footer height-wizard">
                            <div class="pull-right">
                                <input type='button' class='btn btn-next btn-fill btn-primary btn-wd btn-sm' name='next' value='Next' />
                                <input type='submit' class='btn btn-finish btn-fill btn-primary btn-wd btn-sm' name='finish' value='Finish' formmethod="post"/>
                            </div>

                            <div class="pull-left">
                                <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='Previous' />
                            </div>
                            <div class="clearfix"></div>
                        </div>

                    </form>
                </div>
            </div> <!-- wizard container -->
        </div>
        </div><!-- end row -->
    </div> <!--  big container -->

</div>

